@using ToDoJS.Models
@model ToDoJS.Models.DayOfWeek

@{
    Layout = null;
    var controllerName = "DayOfWeeks";
    var actionName = "Edit";
    var enctype = "application/x-www-form-urlencoded";
}
<h3>День недели</h3>

@using (Html.BeginForm(actionName, controllerName, FormMethod.Post, new { @enctype = enctype }))
{
    @Html.EditorForModel()

    <button class="btn btn-primary" onclick="Post('@controllerName','@actionName', '@enctype')">Сохранить</button>
    @Html.ActionLink("Отменить", "Index", controllerName, null, new { @class = "btn btn-danger" })
}

